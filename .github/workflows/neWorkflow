# This is a basic workflow to help you get started with Actions

name: Deploy Astro Project to GitHub Pages

on:
  push:
    branches:
      - main # Este flujo de trabajo se ejecuta cuando haces push a la rama 'main'
  # Permite la ejecuciÃ³n manual del workflow desde la pestaÃ±a Actions de GitHub
  workflow_dispatch:

# Otorga permisos al GITHUB_TOKEN para la implementaciÃ³n de GitHub Pages
permissions:
  contents: read
  pages: write
  id-token: write

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout ğŸ›ï¸
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js environment ğŸ”§
        uses: actions/setup-node@v4
        with:
          node-version: '20' # AsegÃºrate de que esta versiÃ³n sea compatible con tus dependencias

      - name: Clean install dependencies ğŸ“¦ # <--- MODIFICADO AQUÃ
        run: |
          rm -rf node_modules package-lock.json 
          npm cache clean --force 
          npm install --legacy-peer-deps 
        # Eliminar para una limpieza total
        # Limpiar la cachÃ© de npm
        # Usar --legacy-peer-deps para resolver problemas de dependencias
        


      - name: Build Astro project ğŸ—ï¸
        run: npm run build

      # **Â¡CRÃTICO!** Paso de depuraciÃ³n para verificar el contenido de 'dist'
      - name: List dist contents ğŸ”
        run: ls -R dist # Muestra el contenido de la carpeta 'dist'

      - name: Upload artifact â¬†ï¸
        uses: actions/upload-pages-artifact@v3
        with:
          path: './dist' # Sube la carpeta 'dist' como artefacto

  deploy:
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    needs: build # Este job depende del job 'build'
    steps:
      - name: Deploy to GitHub Pages ğŸš€
        id: deployment
        uses: actions/deploy-pages@v4 # AcciÃ³n oficial de GitHub para desplegar a Pages
        # No se requiere 'with' aquÃ­, a menos que especifiques opciones como 'cname' o 'token'
